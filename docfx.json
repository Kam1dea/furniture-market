{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [ "Furniture.WebApi/Furniture.WebApi.csproj",
            "Furniture.Application/Furniture.Application.csproj",
            "Furniture.Domain/Furniture.Domain.csproj",
            "Furniture.Infrastructure/Furniture.Infrastructure.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Furniture-Market",
      "_appTitle": "Furniture-Market",
      "_enableSearch": true,
      "pdf": true
    }
  }
}